{{#paper-card}}
  {{#link-to 'book' book.id}}<img src="{{book.image_url}}" alt="{{book.title}}" />{{/link-to}}
  {{#paper-card-content}}
    {{#link-to 'book' book.id}}<h2>{{book.title}}</h2>{{/link-to}}
    <h3>{{book.author}}</h3>
    <p>
      {{book.summary}}
    </p>
  {{/paper-card-content}}
{{/paper-card}}
